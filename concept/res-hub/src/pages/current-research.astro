---
import BaseLayout from '../layouts/BaseLayout.astro';
import CurrentResearchPage from '../react-pages/research-projects/CurrentResearchPage.jsx';

const basePath = import.meta.env.BASE_URL;
---

<BaseLayout title="Current Research - Research Portal">
  <main class="max-w-7xl mx-auto px-4 md:px-8 py-10 min-h-[60vh]">
    <CurrentResearchPage client:load basePath={basePath} />
  </main>
</BaseLayout>
