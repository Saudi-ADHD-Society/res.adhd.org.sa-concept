---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ClinicalToolsPage from '../../react-pages/clinical-tools/ClinicalToolsPage.jsx';
import { getPageContent } from '../../utils/content';

const basePath = import.meta.env.BASE_URL;
const locale = 'en';

// Load page content from collection
const pageEntry = await getPageContent('clinical-tools', locale);
const pageContent = pageEntry?.data || null;
---

<BaseLayout title={pageContent?.title || 'Clinical Tools & Resources - Research Portal'} description={pageContent?.description} locale={locale}>
  <main class="max-w-7xl mx-auto px-4 md:px-8 py-10 min-h-[60vh]">
    <ClinicalToolsPage client:load basePath={basePath} locale={locale} content={pageContent} />
  </main>
</BaseLayout>
