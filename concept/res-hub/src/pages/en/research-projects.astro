---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ResearchProjectsPage from '../../react-pages/research-projects/ResearchProjectsPage.jsx';

const basePath = import.meta.env.BASE_URL;
const locale = 'en';

---

<BaseLayout title="Research Projects - Research Portal" locale={locale}>
