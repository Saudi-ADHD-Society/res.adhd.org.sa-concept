<BaseLayout title="HCP Resources - Research Portal">
  <main class="max-w-7xl mx-auto px-4 md:px-8 py-10 min-h-[60vh]">
    <HcpResourcesPage client:load basePath={basePath} />
  </main>
</BaseLayout>
