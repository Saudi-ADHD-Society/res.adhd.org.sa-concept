---
import BaseLayout from '../layouts/BaseLayout.astro';
import CpgContentPage from '../react-pages/clinical-tools/CpgContentPage.jsx';

const basePath = import.meta.env.BASE_URL;
---

<BaseLayout title="Saudi National ADHD CPG - Research Portal">
  <main class="max-w-7xl mx-auto px-4 md:px-8 py-10 min-h-[60vh]">
    <CpgContentPage client:load basePath={basePath} />
  </main>
</BaseLayout>
