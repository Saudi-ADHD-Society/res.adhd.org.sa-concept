---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.jsx';
import { getCollection } from 'astro:content';

const basePath = import.meta.env.BASE_URL;

// Get all papers and filter out hidden ones
const allPapers = await getCollection('papers');
const papers = allPapers.filter(paper => !paper.data.visibility?.hidden);

// Sort: newest first by publication.year, then publishedDate, then title
papers.sort((a, b) => {
  const yearA = a.data.publication?.year || 0;
  const yearB = b.data.publication?.year || 0;
  if (yearB !== yearA) return yearB - yearA;
  
  const dateA = a.data.publication?.publishedDate || '';
  const dateB = b.data.publication?.publishedDate || '';
  if (dateB !== dateA) return dateB.localeCompare(dateA);
  
  return a.data.title.localeCompare(b.data.title);
});

// Extract unique categories and years for filters
const categories = [...new Set(papers.flatMap(p => p.data.categories || []))].sort();
const years = [...new Set(papers.map(p => p.data.publication?.year).filter(Boolean))].sort((a, b) => b - a);
---

<BaseLayout title="Research Library - Research Portal" description="Browse and search the Saudi ADHD Research Library - a comprehensive collection of research papers and publications.">
  <main class="max-w-7xl mx-auto px-4 md:px-8 py-10 min-h-[60vh]">
    <Breadcrumb client:load basePath={basePath} />
    
    <div class="space-y-6">
      <!-- Header -->
      <div class="bg-gradient-to-br from-emerald-50 to-teal-50 border border-emerald-200 rounded-2xl p-8 md:p-10">
        <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">Research Library</h1>
        <p class="text-slate-700 text-lg max-w-3xl">
          Browse and search our comprehensive collection of Saudi ADHD research papers and publications.
        </p>
      </div>

      <!-- Filters and Search -->
      <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6">
        <div class="grid md:grid-cols-3 gap-4">
          <!-- Search -->
          <div class="md:col-span-2">
            <label for="search-input" class="block text-sm font-medium text-slate-700 mb-2">Search</label>
            <input
              type="text"
              id="search-input"
              placeholder="Search by title, abstract, authors, journal, or DOI..."
              class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            />
          </div>
          
          <!-- Category Filter -->
          <div>
            <label for="category-filter" class="block text-sm font-medium text-slate-700 mb-2">Category</label>
            <select
              id="category-filter"
              class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            >
              <option value="">All Categories</option>
              {categories.map(cat => (
                <option value={cat}>{cat}</option>
              ))}
            </select>
          </div>
          
          <!-- Year Filter -->
          <div>
            <label for="year-filter" class="block text-sm font-medium text-slate-700 mb-2">Year</label>
            <select
              id="year-filter"
              class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            >
              <option value="">All Years</option>
              {years.map(year => (
                <option value={year}>{year}</option>
              ))}
            </select>
          </div>
        </div>
        
        <div class="mt-4 text-sm text-slate-600">
          <span id="result-count">{papers.length}</span> paper{papers.length !== 1 ? 's' : ''} found
        </div>
      </div>

      <!-- Papers List -->
      <div id="papers-container" class="space-y-4">
        {papers.map((paper) => {
          const authors = paper.data.authors || [];
          const authorNames = authors.map(a => `${a.given} ${a.family}`).join(', ');
          const year = paper.data.publication?.year;
          const journalName = paper.data.journal?.name || paper.data.journal?.abbreviation || '';
          const categories = paper.data.categories || [];
          
          return (
            <a
              href={`${basePath}library/${paper.data.slug}/`}
              class="paper-item block bg-white p-6 rounded-xl border border-slate-200 shadow-sm hover:shadow-md hover:border-emerald-300 transition-all"
              data-title={paper.data.title.toLowerCase()}
              data-abstract={(paper.data.abstract || '').toLowerCase()}
              data-authors={authorNames.toLowerCase()}
              data-journal={journalName.toLowerCase()}
              data-doi={(paper.data.doi || '').toLowerCase()}
              data-categories={categories.join('|').toLowerCase()}
              data-year={year || ''}
            >
              <h2 class="text-xl font-bold text-slate-900 mb-2 hover:text-emerald-700 transition-colors">
                {paper.data.title}
              </h2>
              
              <div class="text-sm text-slate-600 mb-3">
                {authors.length > 0 && (
                  <span class="paper-authors">{authorNames}</span>
                )}
                {journalName && (
                  <span class="paper-journal"> • {journalName}</span>
                )}
                {year && (
                  <span class="paper-year"> • {year}</span>
                )}
              </div>
              
              {paper.data.abstract && (
                <p class="text-slate-700 mb-3 line-clamp-2">{paper.data.abstract}</p>
              )}
              
              <div class="flex flex-wrap gap-2">
                {categories.map(cat => (
                  <span class="px-2 py-1 bg-emerald-50 text-emerald-700 text-xs font-medium rounded">
                    {cat}
                  </span>
                ))}
                {paper.data.access?.status === 'open' && (
                  <span class="px-2 py-1 bg-green-50 text-green-700 text-xs font-medium rounded">
                    Open Access
                  </span>
                )}
              </div>
            </a>
          );
        })}
      </div>
      
      <!-- Empty State -->
      <div id="empty-state" class="hidden text-center py-12">
        <p class="text-slate-600 text-lg">No papers found matching your criteria.</p>
      </div>
    </div>
  </main>

  <script>
    // Client-side filtering
    const searchInput = document.getElementById('search-input');
    const categoryFilter = document.getElementById('category-filter');
    const yearFilter = document.getElementById('year-filter');
    const papersContainer = document.getElementById('papers-container');
    const emptyState = document.getElementById('empty-state');
    const resultCount = document.getElementById('result-count');
    const paperItems = Array.from(document.querySelectorAll('.paper-item'));

    function filterPapers() {
      const searchTerm = (searchInput.value || '').toLowerCase();
      const selectedCategory = (categoryFilter.value || '').toLowerCase();
      const selectedYear = yearFilter.value || '';

      let visibleCount = 0;

      paperItems.forEach(item => {
        const title = item.dataset.title || '';
        const abstract = item.dataset.abstract || '';
        const authors = item.dataset.authors || '';
        const journal = item.dataset.journal || '';
        const doi = item.dataset.doi || '';
        const categories = item.dataset.categories || '';
        const year = item.dataset.year || '';

        // Search filter
        const matchesSearch = !searchTerm || 
          title.includes(searchTerm) ||
          abstract.includes(searchTerm) ||
          authors.includes(searchTerm) ||
          journal.includes(searchTerm) ||
          doi.includes(searchTerm);

        // Category filter
        const matchesCategory = !selectedCategory || categories.includes(selectedCategory);

        // Year filter
        const matchesYear = !selectedYear || year === selectedYear;

        if (matchesSearch && matchesCategory && matchesYear) {
          item.style.display = 'block';
          visibleCount++;
        } else {
          item.style.display = 'none';
        }
      });

      // Update result count
      resultCount.textContent = `${visibleCount} paper${visibleCount !== 1 ? 's' : ''} found`;

      // Show/hide empty state
      if (visibleCount === 0) {
        emptyState.classList.remove('hidden');
        papersContainer.classList.add('hidden');
      } else {
        emptyState.classList.add('hidden');
        papersContainer.classList.remove('hidden');
      }
    }

    searchInput.addEventListener('input', filterPapers);
    categoryFilter.addEventListener('change', filterPapers);
    yearFilter.addEventListener('change', filterPapers);
  </script>
</BaseLayout>
