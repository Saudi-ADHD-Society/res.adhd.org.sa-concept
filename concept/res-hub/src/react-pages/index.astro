---
import BaseLayout from '../layouts/BaseLayout.astro';
import HomePage, { HomeHero } from '../pages/HomePage.jsx';
import { createNavigate } from '../utils/navigation';

const basePath = import.meta.env.BASE_URL;
const navigate = createNavigate(basePath);
---

<BaseLayout title="Research Portal - National ADHD Knowledge Hub">
  <HomeHero client:load onNavigate={navigate} />
  <main className="max-w-7xl mx-auto px-4 md:px-8 py-10 min-h-[60vh]">
    <HomePage client:load onNavigate={navigate} />
  </main>
</BaseLayout>
