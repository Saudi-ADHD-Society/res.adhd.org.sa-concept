---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CopyrightPage from '../../react-pages/legal/CopyrightPage.jsx';

const basePath = import.meta.env.BASE_URL;
const locale = 'en';

---

<BaseLayout title="Copyright Notice - Research Portal" locale={locale}>
  <main class="max-w-7xl mx-auto px-4 md:px-8 py-10 min-h-[60vh]">
    <CopyrightPage client:load basePath={basePath} locale={locale} />
  </main>
</BaseLayout>

