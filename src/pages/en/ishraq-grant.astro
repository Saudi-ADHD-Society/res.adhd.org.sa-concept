---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GrantPage from '../../react-pages/governance/GrantPage.jsx';

const basePath = import.meta.env.BASE_URL;
const locale = 'en';

---

<BaseLayout title="Grants & Funding - Research Portal" locale={locale}>
  <main class="max-w-7xl mx-auto px-4 md:px-8 py-10 min-h-[60vh]">
    <GrantPage client:load basePath={basePath} locale={locale} />
  </main>
</BaseLayout>
