---
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';

const { 
  title = 'Research Portal - National ADHD Knowledge Hub', 
  description = 'The Research Unit of the Saudi ADHD Society',
  locale = 'en',
  currentPathname
} = Astro.props;
const basePath = import.meta.env.BASE_URL;
const htmlLang = locale === 'ar' ? 'ar' : 'en';
const htmlDir = locale === 'ar' ? 'rtl' : 'ltr';
// Get current pathname from Astro if not provided
const pathname = currentPathname || Astro.url.pathname;
---

<!doctype html>
<html lang={htmlLang} dir={htmlDir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href={`${basePath}favicon.svg`} />
    <title>{title}</title>
  </head>
  <body>
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-emerald-600 focus:text-white focus:rounded-lg focus:font-semibold focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
      Skip to main content
    </a>
    <div class="min-h-screen bg-slate-50 font-sans text-slate-800">
      <Navigation client:load basePath={basePath} locale={locale} currentPathname={pathname} />
      
      <main id="main-content">
        <slot />
      </main>
      
      <Footer client:load basePath={basePath} locale={locale} />
    </div>
  </body>
</html>
